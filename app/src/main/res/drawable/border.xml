<!-- transparent_rounded_with_corner.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#00000000" /> <!-- Transparent when pressed -->
            <stroke android:color="#FFFFFF" android:width="1dp" /> <!-- White corner -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#00000000" /> <!-- Transparent when focused -->
            <stroke android:color="#FFFFFF" android:width="1dp" /> <!-- White corner -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#00000000" /> <!-- Transparent by default -->
            <stroke android:color="#FFFFFF" android:width="1dp" /> <!-- White corner -->
        </shape>
    </item>
</selector>
