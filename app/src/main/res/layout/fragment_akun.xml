<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.akun.akunFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/profil"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">
            <RelativeLayout
                android:id="@+id/poto"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/poto"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nm"
                android:layout_width="169dp"
                android:layout_height="84dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@id/poto">

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joyo Kilat Moko"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Joyokilatm@gmail.com"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/nomor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:text="082297068911"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/verify_ijo"

                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_toRightOf="@id/poto"
                android:layout_below="@id/nm"
                android:id="@+id/varify">
                <TextView
                    android:id="@+id/btn_verify"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:text="Terverivikasi"/>
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/verify"
                    android:layout_toRightOf="@+id/btn_verify"/>
            </RelativeLayout>

        </RelativeLayout>

        <!--        isi dari tombol akun dan keamanan-->
        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/profil"
            android:id="@+id/keamanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/judul1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:text="Akun dan Keamanan"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <!--            tb1-->
            <RelativeLayout
                android:id="@+id/akun"
                android:layout_below="@id/judul1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/akun"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_akun"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_akun"
                    android:id="@+id/btn_akun"
                 android:backgroundTint="@color/white"
   android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Akun"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <RelativeLayout
                    android:layout_toRightOf="@id/img_akun"
                    android:layout_below="@id/btn_akun"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/abu"/>

            </RelativeLayout>
            <!--            tb2-->
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/bahasa"
                android:layout_below="@id/akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/bahasa"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_bahasa"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_bahasa"
                    android:id="@+id/btn_bahasa"
                 android:backgroundTint="@color/white"
   android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Bahasa"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <RelativeLayout
                    android:layout_toRightOf="@id/img_bahasa"
                    android:layout_below="@id/btn_bahasa"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/abu"/>

            </RelativeLayout>
            <!--            tb3-->
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/sidik"
                android:layout_below="@id/bahasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/sidik"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_sidik"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_sidik"
                    android:id="@+id/btn_sidik"
                    android:backgroundTint="@color/white"
                    android:background="@android:color/transparent"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:hint="Masuk Dengan Biometric"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <ImageView
                    android:layout_toRightOf="@id/img_sidik"
                    android:layout_below="@id/btn_sidik"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:src="@color/abu"/>
                <ToggleButton
                    android:layout_toRightOf="@id/btn_sidik"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/rounded_square">
                </ToggleButton>

            </RelativeLayout>
        </RelativeLayout>
        <!--        layanan dan keutamaan-->
        <RelativeLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/keamanan"
            android:id="@+id/layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/judul2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:text="Layanan"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <!--            tb1-->
            <RelativeLayout
                android:id="@+id/cs"
                android:layout_below="@id/judul2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/cs"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_cs"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_cs"
                    android:id="@+id/btn_cs"
                 android:backgroundTint="@color/white"
   android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Call Center"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <RelativeLayout
                    android:layout_toRightOf="@id/img_cs"
                    android:layout_below="@id/btn_cs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/abu"/>
            </RelativeLayout>
            <!--            tb2-->
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/bantuan"
                android:layout_below="@id/cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/help"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_bantuan"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_bantuan"
                    android:id="@+id/btn_bantuan"
                 android:backgroundTint="@color/white"
   android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pusat Bantuan"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <RelativeLayout
                    android:layout_toRightOf="@id/img_bantuan"
                    android:layout_below="@id/btn_bantuan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/abu"/>

            </RelativeLayout>
            <!--            tb3-->
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/tambahan"
                android:layout_below="@id/bantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/setting"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_tambahan"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_tambahan"
                    android:id="@+id/btn_tambahan"
                 android:backgroundTint="@color/white"
   android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pengaturan Tambahan"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <RelativeLayout
                    android:layout_toRightOf="@id/img_tambahan"
                    android:layout_below="@id/btn_tambahan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/abu"/>

            </RelativeLayout>

            <!--            tb4-->
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/ganti"
                android:layout_below="@id/tambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ganti"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_ganti"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_ganti"
                    android:id="@+id/btn_ganti"
                 android:backgroundTint="@color/white"
   android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ganti Akun"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <RelativeLayout
                    android:layout_toRightOf="@id/img_ganti"
                    android:layout_below="@id/btn_ganti"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/abu"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/exit"
                android:layout_below="@id/ganti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/exit"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/img_exit"
                    android:layout_width="@dimen/_25sdp"
                    android:tint="@color/merah"
                    android:layout_height="@dimen/_25sdp"/>

                <Button
                    android:layout_toRightOf="@id/img_exit"
                    android:id="@+id/btn_exit"
                 android:backgroundTint="@color/white"
   android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Keluar"
                    android:textSize="@dimen/_10sdp"
                    android:textAlignment="textStart"/>
                <RelativeLayout
                    android:layout_toRightOf="@id/img_exit"
                    android:layout_below="@id/btn_exit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/abu"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>